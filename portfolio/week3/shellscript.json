	"add shebang":{

		"scope": "sh",

		"prefix": "shebang",

		"body":[

			"#!/bin/bash"

		],
		
		"description": "Add shebang to script"
	
	},

	"define shell colors":{

		"scope": "sh",

		"prefix": "colors",

		"body":[

			"#Define colors",
			"BLK=\"\\033[30m\"\n",
			"RED=\"\\033[31m\"\n",
			"BRED=\"\\033[1;31m\"\n",
			"GRN=\"\\033[32m\"\n",
			"BGRN=\"\\033[1;32m\"\n",
			"BRN=\"\\033[33m\"\n",
			"BBRN=\"\\033[1;33m\"\n",
			"BLU=\"\\033[34m\"\n",
			"BBLU=\"\\033[1;34m\"\n",
			"PRPL=\"\\033[35m\"\n",
			"BPRPL=\"\\033[1;35m\"\n",
			"CYN=\"\\033[36m\"\n",
			"GRY=\"\\033[37m\"\n",

			"#no color",
			"RST=\"\\033[0m\"\n" ,
			
			

		],
		
		"description": "Define shell colors"
	
	},




